@{
  Layout = "_Layout";
}
@model Salon.Models.Stylist;
<div class="text-center container">
  <h4>Add a new stylist</h4>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)<br>
    @Html.TextBoxFor(model => model.Name, new { required="required"})<br><br>
    <input type="submit" value="Add new stylist" class="btn btn-primary"/>
  }
  <br>
  <p>@Html.ActionLink("Show all stylists", "Index")</p>
</div>
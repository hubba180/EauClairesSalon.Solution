@{
  Layout = "_Layout";
}

@using Salon.Models; 
@model Salon.Models.Stylist;
<div class="text-center container">
  <h2>@Html.DisplayFor(model => model.Name) | Eau Claire's Salon Stylist</h2>
  <hr />
  <ul>
  @if (@Model.Clients.Count == 0)
  {
    <p>no clients</p>
  }
  @foreach (Client client in @Model.Clients)
  {
    <li>@Html.ActionLink(@client.Name, "Details", "Client", new { id = client.ClientId })</li>
  }
  </ul>
  <hr />
  <p>@Html.ActionLink("Add a client for this stylist", "Create", "Client")</p>
  <p>@Html.ActionLink("Delete this stylist", "Delete", new { id = Model.StylistId})</p>
  <p>@Html.ActionLink("Edit this stylist", "Edit", new { id = Model.StylistId})</p>
  <p>@Html.ActionLink("Stylist List", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

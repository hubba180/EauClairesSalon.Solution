@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylist>;

  <h1>Stylists</h1>
  <hr />

@if (@Model.Count == 0)
{
  <h3>You currently don't employ any stylists.</h3>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink(stylist.Name, "Details", new { id = stylist.StylistId}) </li> 
}
<hr />
@Html.ActionLink("Add a stylist", "Create")<br>
@Html.ActionLink("Home", "Index", "Home")